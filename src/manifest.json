{
  "manifest_version" : 2,
  "name": "Collab Sauce",
  "version": "0.1",
  "description": "Collab Sauce allows you to organize and act on website feedback. Includes: Css Editor; Gridlines; WebPaint Tool; Metadata Collection",
  "icons": {
    "192": "logo192.png",
    "512": "logo512.png"
  },
  "browser_action": {
    "default_icon": "logo192.png"
  },
  "background" : {
    "scripts" : ["background.bundle.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content_script.bundle.js"]
  }],
  "permissions": [
    "tabs",
    "<all_urls>",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
